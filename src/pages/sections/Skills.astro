---
import SkillBar from "../../components/SkillBar.astro";
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const logos = ["flutter", "angular", "aspnet"];
const names = ["Flutter", "Angular", "ASP.NET"];
---

<section id="skills" class="mb-10">
  <h2 class="text-2xl font-bold mb-5">Skills</h2>
  <div class="grid md:grid-cols-3 gap-4 ">
    <div class="md:col-span-2">
      <!-- Grid with programming languages -->
      <div class="grid grid-cols-3 gap-4">
        {
          logos.map((logo, index) => 
          <div class="flex flex-col items-center">
            <Image
              src={"/lang-logos/" + logo + ".webp"}
              alt={"logo-" + logo}
              loading="eager"
              width={50}
              height={50}
            />
            <p class="text-sm mt-2">{names[index]}</p>
          </div>
          )
        }
      </div>
    </div>
    <div class="">
      <SkillBar textIzquierda={t('skills.esp')} textoDerecha={t('skills.native')} valor={100} colorHex="#FFC300" />
      <SkillBar textIzquierda={t('skills.chi')} textoDerecha={t('skills.native')} valor={100} colorHex="#EF3134"/>
      <SkillBar textIzquierda={t('skills.eng')} textoDerecha="C1" valor={80} colorHex="#E064FF" />    
    </div>
  </div>
</section>
