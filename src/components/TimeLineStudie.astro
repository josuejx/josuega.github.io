---
interface Props {
	titulo: string;
    rol: string;
	icono: string;
    fecha: string;
}
const { titulo, icono, fecha, rol } = Astro.props;
---
<li class="mb-10 ms-8">
    <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-gray-200 dark:ring-gray-900 dark:bg-blue-900">
        <i class={`bi bi-${icono} text-blue-800 dark:text-blue-300 text-lg`}></i>
    </span>
    <div class="p-4 bg-white dark:bg-gray-800 shadow-md rounded-lg">
      <h3 class="mb-1 text-lg font-semibold text-gray-900 dark:text-white">{titulo}</h3>
      <p class="block mb-2 text-sm font-normal text-gray-700 dark:text-gray-300">{rol}</p>
      <time class="block mb-2 text-sm font-light text-gray-500 dark:text-gray-400">{fecha}</time>
      <slot />

    </div>
</li>